extends ../layout

block content
  .container(class="col-md-8")
    table.table
      thead
      tr
        th(scope='col') Name
        th(scope='col') Serial Number
        th(scope='col') IMEI
        th(scope='col') Retail Price
        th(scope='col') Manufacturer ID
        th(scope='col')
      tbody
      each val, index in data
        tr
          td=val.Name
          td=val.SerialNumber
          td=val.IMEI
          td="$" + val.RetailPrice
          td=val.ItemManufacturerId
          td 
            if user.role == "Admin" || user.role == "Manager"
              form(action='/phones/delete', method='post')
                button(class='btn btn-danger' type='submit', name='id', value=val.Id) X
    if user.role == "Admin" || user.role == "Manager" || user.role == "Employee"
      button.btn.btn-primary.float-right(type='button', data-toggle='modal', data-target='#phoneModal')
        | Add
    #phoneModal.modal.fade(tabindex='-1', role='dialog', aria-hidden='true')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            h5.modal-title Add Device
            button.close(type='button', data-dismiss='modal', aria-label='Close') 
            span(aria-hidden='true') &times;
          .modal-body
            form(action="/phones/add", method="post")
              .form-group
                label(for='name') Name
                input.form-control(type='text' name='name' placeholder='Name')
              .form-group
                label(for='serialNumber') Serial Number
                input.form-control(type='number' name='serialNumber' placeholder='Serial Number')
              .form-group
                label(for='imei') IMEI
                input.form-control(type='text' name='imei' placeholder='IMEI')
              .form-group
                label(for='retailPrice') Retail Price
                input.form-control(type='number' step=".01" name='retailPrice' placeholder='Retail Price')
              .form-group
                label(for='itemManufacturerId') Manufacturer ID
                input.form-control(type='number' name='itemManufacturerId' placeholder='Manufacturer ID')
              button.btn.btn-primary.float-right(type='submit') Submit