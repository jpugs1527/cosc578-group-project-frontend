extends ../layout

block content
  div.col-md-6.mx-auto
    h5 Login
    form(action="/user/login", method="post")
      .form-group
        label(for='email') Email address
        input.form-control(type='email' name="email" aria-describedby='emailHelp' placeholder='Enter email')
        small.form-text.text-muted We&apos;ll never share your email with anyone else.
      .form-group
        label(for='password') Password
        input.form-control(type='password' name="password" placeholder='Password')
      button.btn.btn-primary(type='submit') Submit


